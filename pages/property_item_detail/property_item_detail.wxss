.property_item_detail .top {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  justify-content: flex-end;
  color: #f2f4f1;
}
.property_item_detail .top .balance {
  display: flex;
  flex-flow: column wrap;
  align-items: center;
}
.property_item_detail .top .balance text:nth-child(1) {
  font-size: 70rpx;
}
.property_item_detail .top .balance text:nth-child(2) {
  font-size: 30rpx;
  color: rgba(254, 253, 253, 0.7);
  margin-bottom: 50rpx;
}
.property_item_detail .top .inflowOutflow {
  display: flex;
  justify-content: flex-start;
  width: 95%;
  padding: 0 20rpx;
  font-size: 40rpx;
}
.property_item_detail .top .inflowOutflow .year {
  flex: 0.6;
  font-size: 50rpx;
}
.property_item_detail .top .inflowOutflow .year .picker {
  height: 53rpx;
  line-height: 50rpx;
  display: inline;
}
.property_item_detail .top .inflowOutflow .inflow {
  flex: 1.2;
}
.property_item_detail .top .inflowOutflow .outflow {
  flex: 1.2;
}
.property_item_detail .top .inflowOutflow view {
  display: flex;
  flex-flow: column wrap;
  justify-content: space-between;
}
.property_item_detail .top .inflowOutflow view text:nth-child(1) {
  font-size: 40rpx;
}
.property_item_detail .top .inflowOutflow view text:nth-child(2) {
  font-size: 30rpx;
  color: rgba(254, 253, 253, 0.7);
}
.property_item_detail .bottom .content {
  padding: 15rpx 15rpx 0 15rpx;
  font-size: 30rpx;
  color: #808080;
}
.property_item_detail .bottom .list_content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  padding: 10rpx 10rpx;
}
.property_item_detail .bottom .list_content .list_flex {
  display: flex;
  flex-flow: column wrap;
}
.property_item_detail .bottom .list_content .list_flex .month {
  font-size: 35rpx;
  font-weight: 600;
}
.property_item_detail .bottom .list_text {
  padding-top: 15rpx;
  transition: all 0.5s ease;
  text-indent: 40rpx;
  display: block;
  background-color: #f2f1f6;
}
.property_item_detail .bottom .list_text .waterlessData {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 150rpx;
}
.property_item_detail .bottom .list_text .day {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 30rpx;
  border-top: 1rpx solid #f3f3f3;
}
.property_item_detail .bottom .list_text .day .timetype {
  text-align: start;
}
.property_item_detail .bottom .list_text .day .timetype .mr20 {
  margin-right: 20rpx;
}
.property_item_detail .bottom .list_text .day .timetype .ml20 {
  margin-left: 20rpx;
}
.property_item_detail .bottom .hidden_content {
  display: none;
}
