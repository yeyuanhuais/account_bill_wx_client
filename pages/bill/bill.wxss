.bill {
  width: 100%;
  min-height: 98vh;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.bill .vertical_line {
  position: absolute;
  z-index: -1;
  width: 1rpx;
  height: 100%;
  top: 0;
  left: 50%;
  background-color: #eeeeee;
}
.bill .ball {
  width: 150rpx;
  height: 150rpx;
}
.bill .middle {
  overflow: auto;
  width: 100%;
  height: 100%;
  margin: 20rpx 0;
}
.bill .middle .day {
  height: 65rpx;
  width: 65rpx;
  line-height: 65rpx;
  border-radius: 50%;
  background-color: bisque;
  text-align: center;
}
.text_end {
  text-align: end;
}
.flex_space_between_center {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flex_1 {
  flex: 1;
}
.mrbl10 {
  margin: 0 10rpx 10rpx;
}
