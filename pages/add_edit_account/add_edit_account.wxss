.section {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx;
  min-height: 70rpx;
  width: 95%;
}
.section .section__title {
  font-size: 35rpx;
  margin-right: 20rpx;
}
.section input {
  text-align: end;
}
.section .color_block {
  text-align: center;
  color: #ffffff;
  mix-blend-mode: difference;
}
.hidden {
  display: none;
}

.btn-area {
  display: flex;
  justify-content: center;
  margin: 20rpx;
}
.btn-area button {
  margin: 30rpx;
  width: 30%;
}
.page__hd {
  padding: 40px;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: rgba(0, 0, 0, 0.5);
  text-align: left;
  font-size: 14px;
}
