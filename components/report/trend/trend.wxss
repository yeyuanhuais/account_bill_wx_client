.trend {
  width: 100%;
  height: 100%;
}
.trend .item {
  display: flex;
  border-top: 1rpx solid #f3f3f3;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  padding: 10rpx 10rpx;
}
.trend .item .redColor {
  color: red;
}
.trend .item .list_flex {
  display: flex;
  flex-flow: column wrap;
}
.trend .item .list_flex .month {
  font-size: 30rpx;
  font-weight: 600;
}
.trend .item .list_flex .monthDetail {
  font-size: 25rpx;
}
.trend .bar {
  width: 100%;
  height: 500rpx;
}
.trend .picker_date {
  /* background-color: yellow; */
  color: #64bff1;
  height: 55rpx;
  line-height: 55rpx;
  padding: 0 2%;
  border: 1rpx solid #64bff1;
  border-radius: 30rpx;
  width: fit-content;
}
.trend ec-canvas {
  width: 100%;
  height: 100%;
}
